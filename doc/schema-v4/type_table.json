{
    "$defs": {
        "InlineType": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "kind": {
                            "enum": [
                                "Bool",
                                "Char",
                                "Str",
                                "Never",
                                "Foreign"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "kind": {
                            "const": "Int"
                        },
                        "intkind": { "$ref": "#/$defs/BaseSize" }
                    },
                    "required": [ "intkind" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Uint" },
                        "uintkind": { "$ref": "#/$defs/BaseSize" }
                    },
                    "required": [ "uintkind" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Tuple" },
                        "tys": { "type": "array", "items": { "$ref": "common.json#/$defs/Ty" } }
                    },
                    "required": [ "tys" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Slice" },
                        "ty": { "$ref": "common.json#/$defs/Ty" }
                    },
                    "required": [ "ty" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Array" },
                        "size": { "$ref": "constant.json#/$defs/Constant" },
                        "ty": { "$ref": "common.json#/$defs/Ty" }
                    },
                    "required": [ "size", "ty" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Ref" },
                        "ty": { "$ref": "common.json#/$defs/Ty" },
                        "mutability": { "$ref": "common.json#/$defs/Mutability" }
                    },
                    "required": [ "ty", "mutability" ]
                },
                {
                    "properties": {
                        "kind": { "const": "FnDef" },
                        "defid": { "$ref": "common.json#/$defs/DefId" }
                    },
                    "required": [ "defid" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Adt" },
                        "name": { "$ref": "common.json#/$defs/DefId" },
                        "orig_def_id":  { "$ref": "common.json#/$defs/DefId" },
                        "args": { "type": "array", "items": { "$ref": "common.json#/$defs/Ty" } }
                    },
                    "required": [ "name", "orig_def_id", "args" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Closure" },
                        "upvar_tys": { "type": "array", "iterm": { "$ref": "common.json#/$defs/Ty" } }
                    },
                    "required": [ "upvar_tys" ]
                },
                {
                    "properties": {
                        "kind": { "const": "FnPtr" },
                        "signature": { "$ref": "#/$defs/FnSig" }
                    },
                    "required": [ "signature" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Dynamic" },
                        "trait_id": { "$ref": "common.json#/$defs/DefId" },
                        "predicates": { "type": "array", "items": { "$comment": "unused" } }
                    },
                    "required": [ "trait_id" ]
                },
                {
                    "properties": {
                        "kind": { "const": "RawPtr" },
                        "ty": { "$ref": "common.json#/$defs/Ty" },
                        "mutability": { "$ref": "common.json#/$defs/Mutability" }
                    },
                    "required": [ "ty", "mutability" ]
                },
                {
                    "properties": {
                        "kind": { "const": "Float" },
                        "size": { "$ref": "#/$defs/FloatKind" }
                    },
                    "required": [ "size" ]
                }
            ],
            "required": [
                "kind"
            ],
            "unevaluatedProperties": false
        },
        "BaseSize": {
            "type": "object",
            "properties": {
                "kind": {
                    "enum": [
                        "Usize",
                        "U8",
                        "U16",
                        "U32",
                        "U64",
                        "U128",
                        "Isize",
                        "I8",
                        "I16",
                        "I32",
                        "I64",
                        "I128"
                    ]
                }
            },
            "required": [
                "kind"
            ],
            "additionalProperties": false
        },
        "FloatKind": {
            "type": "object",
            "properties": {
                "kind": { "enum": [ "F32", "F64" ] }
            },
            "required": [ "kind" ],
            "additionalProperies": false
        },
        "Layout": {
            "type": "object",
            "properties": {
                "align": {
                    "type": "number"
                },
                "size": {
                    "type": "number"
                }
            },
            "required": [
                "align",
                "size"
            ],
            "additionalProperties": false
        },
        "FnSig": {
            "type": "object",
            "properties": {
                "inputs": { "type": "array", "items": { "$ref": "common.json#/$defs/Ty" } },
                "output": { "$ref": "common.json#/$defs/Ty" },
                "abi": { "$ref": "common.json#/$defs/Abi" }
            },
            "required": [],
            "additionalProperies": false
        }
    }
}